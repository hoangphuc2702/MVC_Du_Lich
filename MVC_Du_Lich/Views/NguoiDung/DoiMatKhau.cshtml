
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .forgot-password-container {
        width: 400px;
        margin: 50px auto;
    }

    .forgot-password-form {
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .input-group {
        display: flex;
    }

        .input-group input[type="text"] {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .input-group button {
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

    .btn-change {
        width: 100%;
    }
</style>

<div class="forgot-password-container">
    <h2>Đổi Mật Khẩu</h2>

    <h4>@ViewBag.Error</h4>

    @using (Html.BeginForm("DoiMatKhau", "NguoiDung", FormMethod.Post))
    {
        <div class="form-group">
            <label for="oldPass">Mật khẩu cũ:</label>
            <input type="text" id="oldPass" name="oldPass" style="margin-right: 20px" required class="form-control" placeholder="Nhập mật khẩu cũ">
        </div>
        <div class="form-group">
            <label for="passConfirm">Mật khẩu mới:</label>
            <input type="text" id="newPass" name="newPass" required class="form-control" placeholder="Nhập mật khẩu mới">
        </div>
        <div class="form-group">
            <label for="passConfirm">Nhập lại mật khẩu mới:</label>
            <input type="text" id="passConfirm" name="passConfirm" required class="form-control" placeholder="Nhập lại mật khẩu mới">
        </div>
        <button type="submit" class="btn btn-primary btn-change">Thay đổi</button>
    }
</div>




