@model MVC_Du_Lich.Models.ThanhVien

@{
    ViewBag.Title = "CapNhatThanhVien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">Chỉnh sửa thông tin hành khách</h2>

    @using (Html.BeginForm("CapNhatThanhVien", "DatTour"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Nhà xuất bản</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaHK)

            <div class="form-group">
                TÊN THÀNH VIÊN
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                GIỚI TÍNH
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.GioiTinh, new SelectList(new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Nam", Value = "true" },
                        new SelectListItem { Text = "Nữ", Value = "false" }
                    }, "Value", "Text"), "Chọn giới tính", new { @class = "form-control" })

                </div>
            </div>

            <div class="form-group">
                NGÀY SINH
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgaySinh, new { @class = "form-control", type = "date" })

                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                    <input type="submit" value="LƯU" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("TRỞ LẠI", "HienThiCTTour")
    </div>
</div>
