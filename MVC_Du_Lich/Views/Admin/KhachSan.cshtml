@using MVC_Du_Lich.Models
@using PagedList.Mvc
@model PagedList.PagedList<KHACHSAN>
@{
    ViewBag.Title = "KhachSan";
    Layout = "~/Views/Shared/NavigationDichVu.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN KHÁCH SẠN</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "ThemKhachSan")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaKS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenKS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaKS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaLKS)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaKS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenKS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaKS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOAIK.TenLKS)
            </td>

            <td style="width: 150px;">
                @Html.ActionLink("SỬA", "SuaKhachSan", new { loai = item.MaKS }) |
                @Html.ActionLink("CHI TIẾT", "ChiTietKhachSan", new { loai = item.MaKS })|
                @Html.ActionLink("XÓA", "XoaKhachSan", new { loai = item.MaKS })
            </td>
        </tr>
    }

</table>

<!-- Thêm mã phân trang -->
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("KhachSan", new { page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }

    td, th {
        text-align: center;
    }
</style>
