@using MVC_Du_Lich.Models
@using PagedList.Mvc
@model PagedList.PagedList<DIEMDI>
@{
    ViewBag.Title = "DiemDi";
    Layout = "~/Views/Shared/NavigationAdmin.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN ĐIỂM ĐI</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "ThemDiemDi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaDDi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenDDi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaLoaiTour)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDDi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDDi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOAITOUR.TenLoaiTour)
            </td>

            <td style="width: 150px;">
                @Html.ActionLink("SỬA", "SuaDiemDi", new { id = item.MaDDi }) |
                @Html.ActionLink("CHI TIẾT", "ChiTietDiemDi", new { id = item.MaDDi })|
                @Html.ActionLink("XÓA", "XoaDiemDi", new { id = item.MaDDi })
            </td>
        </tr>
    }

</table>

<!-- Thêm mã phân trang -->
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("DiemDi", new { page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }

    td, th {
        text-align: center;
    }
</style>
