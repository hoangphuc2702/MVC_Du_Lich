@model MVC_Du_Lich.Models.CHAULUC
@{
    ViewBag.Title = "ThemChauLuc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Châu Lục</h2>

@using (Html.BeginForm("ThemChauLuc", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CHAULUC</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Mã Châu Lục
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaChauLuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaChauLuc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Tên Châu Lục
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChauLuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChauLuc, "", new { @class = "text-danger" })
            </div>
        </div>      
        <div class="form-group">
            Mã Loại Tour
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiTour", null, htmlAttributes: new { @class = "form - control" })
                @Html.ValidationMessageFor(model => model.MaLoaiTour, "", new { @class = "text - danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ChauLuc")
</div>
