@model MVC_Du_Lich.Models.KHACHSAN
@{
    ViewBag.Title = "ThemKhachSan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Khách Sạn</h2>

@using (Html.BeginForm("ThemKhachSan", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>KHACHSAN</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Mã Khách Sạn
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaKS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaKS, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Tên Khách Sạn
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKS, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Giá Khách Sạn
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaKS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaKS, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Địa Chỉ
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Mã Loại Khách Sạn
            <div class="col-md-10">
                @Html.DropDownList("MaLKS", null, htmlAttributes: new { @class = "form - control" })
                @Html.ValidationMessageFor(model => model.MaLKS, "", new { @class = "text - danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default" />
            </div>
        </div>
    </div>
 }

<div>
    @Html.ActionLink("Back to List", "KhachSan")
</div>

