@model MVC_Du_Lich.Models.LOAIK
@{
    ViewBag.Title = "SuaLoaiKS";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">CHỈNH SỬA LOẠI KHÁCH SẠN</h2>

    @using (Html.BeginForm("SuaLoaiKS", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>LOẠI KHÁCH SẠN</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaLKS)

            <div class="form-group">
                TÊN LOẠI KHÁCH SẠN
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenLKS, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLKS, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("TRỞ LẠI", "Index")
    </div>
</div>

