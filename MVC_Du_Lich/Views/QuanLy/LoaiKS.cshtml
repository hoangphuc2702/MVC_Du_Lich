@using MVC_Du_Lich.Models
@using PagedList.Mvc
@model PagedList.PagedList<LOAIK>
@{
    ViewBag.Title = "LoaiKS";
    Layout = "~/Views/Shared/NavigationDichVu.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN LOẠI KHÁCH SẠN</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "ThemLoaiKS")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaLKS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenLKS)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLKS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLKS)
            </td>
            <td style="width: 150px;">
                @Html.ActionLink("SỬA", "SuaLoaiKS", new { id = item.MaLKS }) |
                @Html.ActionLink("CHI TIẾT", "ChiTietLoaiKS", new { id = item.MaLKS })|
                @Html.ActionLink("XÓA", "XoaLoaiKS", new { id = item.MaLKS })
            </td>
        </tr>
    }

</table>

<!-- Thêm mã phân trang -->
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("LoaiKS", new { page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }

    td, th {
        text-align: center;
    }
</style>
