@model MVC_Du_Lich.Models.DIEMDI
@{
    ViewBag.Title = "ThemDiemDi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Điểm Đi</h2>

@using (Html.BeginForm("ThemDiemDi", "QuanLy", FormMethod.Post, new { @enctype = "multipart/form-data" }))
 {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ĐIỂM ĐI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                Tên Điểm Đi
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDDi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDDi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Loại Tour
                <div class="col-md-10">
                    @Html.DropDownList("MaLoaiTour", null, htmlAttributes: new { @class = "form - control" })
                    @Html.ValidationMessageFor(model => model.MaLoaiTour, "", new { @class = "text - danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default" />
            </div>
        </div>
    </div>
 }

<div>
    @Html.ActionLink("Back to List", "DiemDi")
</div>

