@model MVC_Du_Lich.Models.DIEMDEN
@{
    ViewBag.Title = "ThemDiemDen";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Điểm Đi</h2>

@using (Html.BeginForm("ThemDiemDen", "QuanLy", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DIEMDEN</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Mã Điểm Đến
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaDDen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaDDen, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Tên Điểm Đến
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDDen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDDen, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Mã Châu Lục
            <div class="col-md-10">
                @Html.DropDownList("MaCL", null, htmlAttributes: new { @class = "form - control" })
                @Html.ValidationMessageFor(model => model.MaChauLuc, "", new { @class = "text - danger" })
            </div>
        </div>
        <div class="form-group">
            Mã Loại Tour
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiTour", null, htmlAttributes: new { @class = "form - control" })
                @Html.ValidationMessageFor(model => model.MaLoaiTour, "", new { @class = "text - danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

<div>
    @Html.ActionLink("Back to List", "DiemDen")
</div>

